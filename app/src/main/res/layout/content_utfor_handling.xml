<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.applikasjon.UtforHandlingActivity"
    tools:showIn="@layout/activity_utfor_handling">

    <TextView
        android:id="@+id/WIP"
        android:layout_width="140dp"
        android:layout_height="152dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Du har nå en økt du kan bruke for å utføre en handling."
        app:layout_constraintBottom_toTopOf="@+id/utfor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/utfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Utfør Handling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WIP"
        app:layout_constraintVertical_bias="0.65" />
</android.support.constraint.ConstraintLayout>
